@using DojoActivity.Models
@model User

<style>
    *{
        margin:0;
        padding:0;
    }
</style>
<div>
    <form asp-action="RegistrationProcess" asp-controller="DojoActivity" method="post">
        <h3 style="color:#ff0066">Register</h3><br>

        <span asp-validation-for="FirstName" style="color:red"></span>
        <p>First Name:<br><input type="text" asp-for="FirstName"></p><br>

        <span asp-validation-for="LastName" style="color:red"></span>
        <p>Last Name:<br><input type="text" asp-for="LastName"></p><br>

        <span asp-validation-for="Email" style="color:red"></span>
        <p>Email:<br><input type="text" asp-for="Email"></p><br>

        <span asp-validation-for="Password" style="color:red"></span>
        <p>Password:<br><input type="password" asp-for="Password"></p><br>

        <span asp-validation-for="ConfirmPassword" style="color:red"></span>
        <p>Confirm Password:<br><input type="password" asp-for="ConfirmPassword"></p>

        <button type="submit">Register</button>
    </form>
</div>